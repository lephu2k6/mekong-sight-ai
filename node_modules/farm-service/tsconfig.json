        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@mekong/shared": [
                "../../../packages/shared/src/index.ts"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}